<?xml version="1.0" encoding="UTF-8"?>

<!--
    Archivo de configuraciÃ³n principal de Maven.
    AquÃ­ se definen:
    - La versiÃ³n de Java
    - Las dependencias del proyecto
    - Los plugins de compilaciÃ³n
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- VersiÃ³n del modelo de Maven -->
	<modelVersion>4.0.0</modelVersion>

	<!-- Spring Boot como proyecto padre -->
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.2.1</version>
	</parent>

	<!-- IdentificaciÃ³n del proyecto -->
	<groupId>com.example</groupId>
	<artifactId>sistemaInquilinos</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<!-- VersiÃ³n de Java utilizada en el proyecto -->
	<properties>
		<java.version>21</java.version>
	</properties>

	<!-- ========================= -->
	<!-- DEPENDENCIAS DEL PROYECTO -->
	<!-- ========================= -->
	<dependencies>

		<!-- ðŸ”¹ Spring Boot Web
             Permite crear controladores REST (@RestController),
             recibir peticiones HTTP y devolver JSON -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<!-- ðŸ” Spring Security
             Se utiliza para:
             - Login
             - AutenticaciÃ³n
             - AutorizaciÃ³n por roles
             - ProtecciÃ³n de endpoints -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-security</artifactId>
		</dependency>

		<!-- ðŸ—„ï¸ Spring Data JPA
             Permite trabajar con la base de datos usando:
             - Repositorios
             - Entidades
             - Hibernate -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>

		<!-- âœ… Validaciones (como @NotBlank, @Min, @Max, etc.) -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-validation</artifactId>
		</dependency>

		<!-- ðŸ¬ Conector de MySQL
             Permite que Spring se conecte con la base de datos -->
		<dependency>
			<groupId>com.mysql</groupId>
			<artifactId>mysql-connector-j</artifactId>
			<scope>runtime</scope>
		</dependency>

		<!-- âš¡ Lombok
             Genera automÃ¡ticamente:
             - Getters
             - Setters
             - Constructores
             - Builder
             Evita escribir cÃ³digo repetitivo -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>1.18.30</version>
			<scope>provided</scope>
		</dependency>

		<!-- ðŸ”‘ JWT API
             Permite generar y validar tokens JWT -->
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-api</artifactId>
			<version>0.11.5</version>
		</dependency>

		<!-- ImplementaciÃ³n interna de JWT -->
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-impl</artifactId>
			<version>0.11.5</version>
			<scope>runtime</scope>
		</dependency>

		<!-- ConversiÃ³n de JWT a JSON -->
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-jackson</artifactId>
			<version>0.11.5</version>
			<scope>runtime</scope>
		</dependency>

		<!-- ðŸ§ª Test de Spring Boot -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>

		<!-- ðŸ§ª Test especÃ­ficos de Spring Security -->
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-test</artifactId>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<!-- ================= -->
	<!-- CONFIGURACIÃ“N BUILD -->
	<!-- ================= -->
	<build>
		<plugins>

			<!-- âš™ï¸ Plugin compilador de Java
                 - Usa Java 21
                 - Soporte para Lombok -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<source>21</source>
					<target>21</target>

					<!-- ActivaciÃ³n correcta de Lombok -->
					<annotationProcessorPaths>
						<path>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
							<version>1.18.30</version>
						</path>
					</annotationProcessorPaths>
				</configuration>
			</plugin>

			<!-- ðŸš€ Plugin para ejecutar Spring Boot -->
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>

		</plugins>
	</build>

</project>
